  .bitla
    margin 20px
    .created_at
        display none
    .title
        font-weight bold
        background-color #eee
    .name
        background-color #ffa
       input#delete
    	   margin-top -17px
    	   margin-left 255px
       input#edit
    	   margin-top -20px
    	   margin-left 215px
    .fare
       background-color #eee
    .journeyHours
       background-color #ffa
    .arrivalTime
       background-color #eee
    .startCityName
       background-color #ffa
    .endCityName
       background-color #eee
.newbitla
    border 3px
    border-color #000
    border-style dotted
    width 450px
    margin-left auto
    margin-right auto
    padding 14px
